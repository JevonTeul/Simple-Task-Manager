<%- include('partials/header', { title: 'Deleted Tasks' }) %>

<div class="container">
    <h1>Deleted Tasks</h1>
    <a href="/" class="btn btn-secondary">Back to All Tasks</a>

    <% if (trash.length > 0) { %>
        <ul class="task-list">
            <% trash.forEach(task => { %>
                <li class="task-item deleted">
                    <span class="task-status deleted">Deleted</span>
                    
                    <div class="task-content">
                        <h3><%= task.title %></h3>
                        <% if (task.description) { %>
                            <p class="task-description"><%= task.description %></p>
                        <% } %>
                        <p class="text-muted">
                            Deleted: <%= new Date(task.updated_at).toLocaleString() %>
                        </p>
                        <% if (task.completed) { %>
                            <p class="text-success">This task was completed before deletion</p>
                        <% } %>
                    </div>
                    
                    <div class="task-actions">
                        <form action="/restore-from-trash/<%= task.id %>" method="POST">
                            <button type="submit" class="btn btn-success">Restore Task</button>
                        </form>
                        <form action="/delete-permanently/<%= task.id %>" method="POST">
                            <button type="submit" class="btn btn-danger">Delete Permanently</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <div class="empty-state">
            <p>No deleted tasks. When you delete tasks, they'll appear here.</p>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>