<%- include('partials/header', { title: 'Completed Tasks' }) %>

<div class="container">
    <h1>Completed Tasks</h1>
    <a href="/" class="btn btn-secondary">Back to All Tasks</a>

    <% if (completedTasks.length > 0) { %>
        <ul class="task-list">
            <% completedTasks.forEach(task => { %>
                <li class="task-item completed">
                    <span class="task-status completed">Completed</span>
                    
                    <div class="task-content">
                        <h3><%= task.title %></h3>
                        <% if (task.description) { %>
                            <p class="task-description"><%= task.description %></p>
                        <% } %>
                        <p class="text-muted">
                            Completed: <%= new Date(task.updated_at).toLocaleString() %>
                        </p>
                    </div>
                    
                    <div class="task-actions">
                        <form action="/toggle-task/<%= task.id %>" method="POST">
                            <button type="submit" class="btn btn-secondary">Mark Incomplete</button>
                        </form>
                        <form action="/move-to-trash/<%= task.id %>" method="POST">
                            <button type="submit" class="btn btn-danger">Delete Task</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <div class="empty-state">
            <p>No completed tasks yet. Complete some tasks to see them here!</p>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>